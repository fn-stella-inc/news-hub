# -- news hub environment variables
# -- copy this file to .env and fill in the values

# -- site configuration
SITE_URL=https://news-hub.example.com
SITE_NAME=News Hub

# -- api configuration (for ai content generation)
AI_API_KEY=your-ai-api-key-here
AI_API_URL=https://api.example.com/v1

# -- database configuration (optional)
DATABASE_URL=postgresql://user:password@localhost:5432/newshub

# -- analytics (optional)
ANALYTICS_ID=your-analytics-id

# -- feature flags
ENABLE_AI_CONTENT=true
ENABLE_COMMENTS=false
ENABLE_NEWSLETTER=true

# -- rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# -- cache configuration
CACHE_TTL_SECONDS=300

# -- environment
NODE_ENV=development
