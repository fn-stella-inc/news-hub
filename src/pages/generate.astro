---
// -- generate page - create articles with ai
export const prerender = false;

import BaseLayout from '../layouts/base-layout.astro';
import Navbar from '../components/navbar.astro';
import Footer from '../components/footer.astro';
import { Sparkles, Cpu, FlaskConical, Briefcase, Palette, BookOpen, Loader2, CheckCircle, AlertCircle, ArrowRight } from 'lucide-astro';
---

<BaseLayout 
  title="Generate Article"
  description="Create AI-powered news articles with Gemini"
  keywords={['generate', 'ai', 'content', 'articles']}
>
  <Navbar />
  
  <main id="main-content" class="generate-page">
    <div class="container">
      <!-- -- page header -->
      <header class="page-header">
        <div class="header-icon">
          <Sparkles size={32} strokeWidth={2} />
        </div>
        <h1 class="page-title">
          <span class="title-gradient">Generate Article</span>
        </h1>
        <p class="page-description">
          Create AI-powered news articles using Gemini. Select a category and optionally provide a topic description.
        </p>
      </header>
      
      <!-- -- generator form -->
      <div class="generator-container">
        <form id="generate-form" class="generator-form">
          <!-- -- category selection -->
          <div class="form-section">
            <label class="form-label">Select Category</label>
            <div class="category-grid">
              <label class="category-option">
                <input type="radio" name="category" value="technology" checked />
                <div class="category-card">
                  <div class="category-icon">
                    <Cpu size={24} strokeWidth={2} />
                  </div>
                  <span class="category-name">Technology</span>
                </div>
              </label>
              
              <label class="category-option">
                <input type="radio" name="category" value="topics" />
                <div class="category-card">
                  <div class="category-icon">
                    <BookOpen size={24} strokeWidth={2} />
                  </div>
                  <span class="category-name">Topics</span>
                </div>
              </label>
              
              <label class="category-option">
                <input type="radio" name="category" value="science" />
                <div class="category-card">
                  <div class="category-icon">
                    <FlaskConical size={24} strokeWidth={2} />
                  </div>
                  <span class="category-name">Science</span>
                </div>
              </label>
              
              <label class="category-option">
                <input type="radio" name="category" value="business" />
                <div class="category-card">
                  <div class="category-icon">
                    <Briefcase size={24} strokeWidth={2} />
                  </div>
                  <span class="category-name">Business</span>
                </div>
              </label>
              
              <label class="category-option">
                <input type="radio" name="category" value="culture" />
                <div class="category-card">
                  <div class="category-icon">
                    <Palette size={24} strokeWidth={2} />
                  </div>
                  <span class="category-name">Culture</span>
                </div>
              </label>
            </div>
          </div>
          
          <!-- -- description input -->
          <div class="form-section">
            <label class="form-label" for="description">
              Topic Description <span class="label-optional">(optional)</span>
            </label>
            <textarea 
              id="description" 
              name="description" 
              class="form-textarea"
              placeholder="Describe the specific topic you want the article to cover. For example: 'Latest developments in quantum computing' or 'Impact of AI on healthcare diagnostics'"
              rows="4"
            ></textarea>
            <p class="form-hint">
              Leave empty for a general article about the selected category
            </p>
          </div>
          
          <!-- -- submit button -->
          <button type="submit" class="generate-btn" id="generate-btn">
            <Sparkles size={18} strokeWidth={2} />
            <span class="btn-text">Generate Article</span>
            <span class="btn-loading" style="display: none;">
              <svg class="spinner" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10" stroke-opacity="0.25"/>
                <path d="M12 2a10 10 0 0 1 10 10" stroke-linecap="round"/>
              </svg>
              Generating...
            </span>
          </button>
        </form>
        
        <!-- -- result section -->
        <div id="result-section" class="result-section" style="display: none;">
          <!-- -- success state -->
          <div id="result-success" class="result-card result-success" style="display: none;">
            <div class="result-icon">
              <CheckCircle size={32} strokeWidth={2} />
            </div>
            <h3 class="result-title">Article Generated!</h3>
            <p class="result-message" id="success-message"></p>
            <div class="result-actions">
              <a href="#" id="view-article-btn" class="result-btn result-btn-primary">
                View Article
                <ArrowRight size={16} strokeWidth={2} />
              </a>
              <button type="button" id="generate-another-btn" class="result-btn result-btn-secondary">
                Generate Another
              </button>
            </div>
          </div>
          
          <!-- -- error state -->
          <div id="result-error" class="result-card result-error" style="display: none;">
            <div class="result-icon">
              <AlertCircle size={32} strokeWidth={2} />
            </div>
            <h3 class="result-title">Generation Failed</h3>
            <p class="result-message" id="error-message"></p>
            <button type="button" id="retry-btn" class="result-btn result-btn-secondary">
              Try Again
            </button>
          </div>
        </div>
        
        <!-- -- preview section -->
        <div id="preview-section" class="preview-section" style="display: none;">
          <h3 class="preview-title">Article Preview</h3>
          <div class="preview-card">
            <img id="preview-image" src="" alt="" class="preview-image" />
            <div class="preview-content">
              <span id="preview-category" class="preview-category"></span>
              <h4 id="preview-article-title" class="preview-article-title"></h4>
              <p id="preview-excerpt" class="preview-excerpt"></p>
              <div id="preview-body" class="preview-body"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
  
  <Footer />
</BaseLayout>

<script>
  const form = document.getElementById('generate-form') as HTMLFormElement;
  const generateBtn = document.getElementById('generate-btn') as HTMLButtonElement;
  const btnText = generateBtn.querySelector('.btn-text') as HTMLElement;
  const btnLoading = generateBtn.querySelector('.btn-loading') as HTMLElement;
  const resultSection = document.getElementById('result-section') as HTMLElement;
  const resultSuccess = document.getElementById('result-success') as HTMLElement;
  const resultError = document.getElementById('result-error') as HTMLElement;
  const successMessage = document.getElementById('success-message') as HTMLElement;
  const errorMessage = document.getElementById('error-message') as HTMLElement;
  const viewArticleBtn = document.getElementById('view-article-btn') as HTMLAnchorElement;
  const generateAnotherBtn = document.getElementById('generate-another-btn') as HTMLButtonElement;
  const retryBtn = document.getElementById('retry-btn') as HTMLButtonElement;
  const previewSection = document.getElementById('preview-section') as HTMLElement;
  const previewImage = document.getElementById('preview-image') as HTMLImageElement;
  const previewCategory = document.getElementById('preview-category') as HTMLElement;
  const previewArticleTitle = document.getElementById('preview-article-title') as HTMLElement;
  const previewExcerpt = document.getElementById('preview-excerpt') as HTMLElement;
  const previewBody = document.getElementById('preview-body') as HTMLElement;
  
  // -- show loading state
  function setLoading(loading: boolean) {
    generateBtn.disabled = loading;
    btnText.style.display = loading ? 'none' : 'inline-flex';
    btnLoading.style.display = loading ? 'inline-flex' : 'none';
  }
  
  // -- show result
  function showResult(success: boolean, message: string, articleSlug?: string) {
    resultSection.style.display = 'block';
    resultSuccess.style.display = success ? 'block' : 'none';
    resultError.style.display = success ? 'none' : 'block';
    
    if (success) {
      successMessage.textContent = message;
      if (articleSlug) {
        viewArticleBtn.href = `/news/${articleSlug}`;
      }
    } else {
      errorMessage.textContent = message;
    }
    
    resultSection.scrollIntoView({ behavior: 'smooth', block: 'center' });
  }
  
  // -- show preview
  function showPreview(article: any) {
    previewSection.style.display = 'block';
    previewImage.src = article.imageUrl;
    previewImage.alt = article.title;
    previewCategory.textContent = article.category;
    previewArticleTitle.textContent = article.title;
    previewExcerpt.textContent = article.excerpt;
    
    // -- convert markdown-like content to html
    const contentHtml = article.content
      .split('\n\n')
      .map((para: string) => {
        if (para.startsWith('## ')) {
          return `<h4>${para.replace('## ', '')}</h4>`;
        }
        return `<p>${para}</p>`;
      })
      .join('');
    
    previewBody.innerHTML = contentHtml;
  }
  
  // -- reset form
  function resetForm() {
    resultSection.style.display = 'none';
    previewSection.style.display = 'none';
    setLoading(false);
  }
  
  // -- handle form submit
  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(form);
    const category = formData.get('category') as string;
    const description = formData.get('description') as string;
    
    setLoading(true);
    resultSection.style.display = 'none';
    previewSection.style.display = 'none';
    
    try {
      const response = await fetch('/api/generate', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ category, description }),
      });
      
      const data = await response.json();
      
      if (data.success) {
        showResult(
          true,
          `"${data.article.title}" has been created and saved to the ${category} category.`,
          data.article.slug
        );
        showPreview(data.article);
      } else {
        showResult(false, data.error || 'Failed to generate article');
      }
    } catch (error) {
      showResult(false, 'Network error. Please try again.');
    } finally {
      setLoading(false);
    }
  });
  
  // -- generate another button
  generateAnotherBtn?.addEventListener('click', resetForm);
  retryBtn?.addEventListener('click', resetForm);
</script>

<style>
  /* -- generate page styles */
  .generate-page {
    padding: var(--space-2xl) 0 var(--space-3xl);
    min-height: calc(100vh - 200px);
  }
  
  .page-header {
    text-align: center;
    margin-bottom: var(--space-2xl);
  }
  
  .header-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    height: 64px;
    background: linear-gradient(135deg, rgba(221, 12, 240, 0.1), rgba(34, 211, 238, 0.1));
    border-radius: var(--radius-xl);
    color: var(--color-accent-primary);
    margin-bottom: var(--space-md);
  }
  
  .page-title {
    font-family: var(--font-display);
    font-size: var(--text-4xl);
    font-weight: 800;
    margin-bottom: var(--space-sm);
  }
  
  .title-gradient {
    background: linear-gradient(135deg, #dd0cf0 0%, #7c3aed 40%, #22d3ee 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .page-description {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }
  
  /* -- generator container */
  .generator-container {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .generator-form {
    background-color: var(--color-bg-primary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    padding: var(--space-xl);
    margin-bottom: var(--space-xl);
  }
  
  .form-section {
    margin-bottom: var(--space-xl);
  }
  
  .form-section:last-of-type {
    margin-bottom: var(--space-lg);
  }
  
  .form-label {
    display: block;
    font-family: var(--font-display);
    font-size: var(--text-base);
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: var(--space-md);
  }
  
  .label-optional {
    font-weight: 400;
    color: var(--color-text-muted);
  }
  
  /* -- category grid */
  .category-grid {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: var(--space-sm);
  }
  
  @media (max-width: 768px) {
    .category-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  @media (max-width: 480px) {
    .category-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  .category-option {
    cursor: pointer;
  }
  
  .category-option input {
    position: absolute;
    opacity: 0;
    pointer-events: none;
  }
  
  .category-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-md);
    background-color: var(--color-bg-secondary);
    border: 2px solid var(--color-border);
    border-radius: var(--radius-lg);
    transition: all var(--transition-fast);
  }
  
  .category-card:hover {
    border-color: var(--color-border-hover);
  }
  
  .category-option input:checked + .category-card {
    border-color: var(--color-accent-primary);
    background: linear-gradient(135deg, rgba(221, 12, 240, 0.05), rgba(34, 211, 238, 0.05));
  }
  
  .category-icon {
    color: var(--color-text-muted);
    transition: color var(--transition-fast);
  }
  
  .category-option input:checked + .category-card .category-icon {
    color: var(--color-accent-primary);
  }
  
  .category-name {
    font-size: var(--text-xs);
    font-weight: 500;
    color: var(--color-text-secondary);
    text-align: center;
  }
  
  /* -- textarea */
  .form-textarea {
    width: 100%;
    padding: var(--space-md);
    background-color: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    font-family: var(--font-body);
    font-size: var(--text-base);
    color: var(--color-text-primary);
    resize: vertical;
    transition: border-color var(--transition-fast);
  }
  
  .form-textarea:focus {
    outline: none;
    border-color: var(--color-accent-primary);
  }
  
  .form-textarea::placeholder {
    color: var(--color-text-muted);
  }
  
  .form-hint {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    margin-top: var(--space-xs);
  }
  
  /* -- generate button */
  .generate-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-sm);
    width: 100%;
    padding: var(--space-md) var(--space-xl);
    background: linear-gradient(135deg, #dd0cf0 0%, #7c3aed 100%);
    border: none;
    border-radius: var(--radius-lg);
    font-family: var(--font-display);
    font-size: var(--text-base);
    font-weight: 600;
    color: white;
    cursor: pointer;
    transition: all var(--transition-base);
  }
  
  .generate-btn:hover:not(:disabled) {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px -10px rgba(221, 12, 240, 0.5);
  }
  
  .generate-btn:disabled {
    opacity: 0.7;
    cursor: not-allowed;
  }
  
  .btn-loading {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
  }
  
  .spinner {
    width: 18px;
    height: 18px;
    animation: spin 1s linear infinite;
  }
  
  @keyframes spin {
    to { transform: rotate(360deg); }
  }
  
  /* -- result section */
  .result-section {
    margin-bottom: var(--space-xl);
  }
  
  .result-card {
    padding: var(--space-xl);
    border-radius: var(--radius-xl);
    text-align: center;
  }
  
  .result-success {
    background: linear-gradient(135deg, rgba(34, 197, 94, 0.1), rgba(16, 185, 129, 0.1));
    border: 1px solid rgba(34, 197, 94, 0.3);
  }
  
  .result-error {
    background: linear-gradient(135deg, rgba(239, 68, 68, 0.1), rgba(220, 38, 38, 0.1));
    border: 1px solid rgba(239, 68, 68, 0.3);
  }
  
  .result-icon {
    margin-bottom: var(--space-md);
  }
  
  .result-success .result-icon {
    color: #22c55e;
  }
  
  .result-error .result-icon {
    color: #ef4444;
  }
  
  .result-title {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: var(--space-sm);
  }
  
  .result-message {
    color: var(--color-text-secondary);
    margin-bottom: var(--space-lg);
  }
  
  .result-actions {
    display: flex;
    gap: var(--space-md);
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .result-btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-sm) var(--space-lg);
    border-radius: var(--radius-lg);
    font-family: var(--font-display);
    font-size: var(--text-sm);
    font-weight: 600;
    text-decoration: none;
    cursor: pointer;
    transition: all var(--transition-fast);
  }
  
  .result-btn-primary {
    background: linear-gradient(135deg, #dd0cf0 0%, #7c3aed 100%);
    color: white;
    border: none;
  }
  
  .result-btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px -5px rgba(221, 12, 240, 0.5);
  }
  
  .result-btn-secondary {
    background-color: var(--color-bg-secondary);
    color: var(--color-text-primary);
    border: 1px solid var(--color-border);
  }
  
  .result-btn-secondary:hover {
    background-color: var(--color-bg-tertiary);
  }
  
  /* -- preview section */
  .preview-section {
    margin-top: var(--space-xl);
  }
  
  .preview-title {
    font-family: var(--font-display);
    font-size: var(--text-lg);
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: var(--space-md);
  }
  
  .preview-card {
    background-color: var(--color-bg-primary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    overflow: hidden;
  }
  
  .preview-image {
    width: 100%;
    height: 250px;
    object-fit: cover;
  }
  
  .preview-content {
    padding: var(--space-lg);
  }
  
  .preview-category {
    display: inline-block;
    padding: var(--space-xs) var(--space-sm);
    background: linear-gradient(135deg, rgba(221, 12, 240, 0.1), rgba(34, 211, 238, 0.1));
    color: var(--color-accent-primary);
    font-size: var(--text-xs);
    font-weight: 600;
    text-transform: capitalize;
    border-radius: var(--radius-md);
    margin-bottom: var(--space-sm);
  }
  
  .preview-article-title {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: var(--space-sm);
  }
  
  .preview-excerpt {
    color: var(--color-text-secondary);
    margin-bottom: var(--space-md);
    font-style: italic;
  }
  
  .preview-body {
    color: var(--color-text-primary);
    line-height: 1.7;
    max-height: 400px;
    overflow-y: auto;
    padding-right: var(--space-sm);
  }
  
  .preview-body h4 {
    font-family: var(--font-display);
    font-size: var(--text-lg);
    font-weight: 600;
    margin-top: var(--space-md);
    margin-bottom: var(--space-sm);
  }
  
  .preview-body p {
    margin-bottom: var(--space-md);
  }
  
  @media (max-width: 768px) {
    .page-title {
      font-size: var(--text-3xl);
    }
    
    .page-description {
      font-size: var(--text-base);
    }
    
    .generator-form {
      padding: var(--space-lg);
    }
  }
</style>
