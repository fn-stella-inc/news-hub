---
// -- home page - landing and presentation
import BaseLayout from '../layouts/base-layout.astro';
import Navbar from '../components/navbar.astro';
import Footer from '../components/footer.astro';
import HeroSection from '../components/hero-section.astro';
import ArticleCard from '../components/article-card.astro';
import { sampleArticles } from '../lib/articles';
import { ArrowRight, Sparkles, Zap, Shield, Globe } from 'lucide-astro';

// -- get latest articles for featured section
const featuredArticles = sampleArticles.slice(0, 4);

// -- features list
const features = [
  {
    icon: 'sparkles',
    title: 'AI-Powered Content',
    description: 'Fresh articles generated and curated by advanced AI systems, delivering relevant news 24/7.',
  },
  {
    icon: 'zap',
    title: 'Real-Time Updates',
    description: 'Stay informed with continuously updated content covering breaking news and trending topics.',
  },
  {
    icon: 'shield',
    title: 'Verified Sources',
    description: 'Content is cross-referenced and fact-checked to ensure accuracy and reliability.',
  },
  {
    icon: 'globe',
    title: 'Global Coverage',
    description: 'Comprehensive coverage of international news from technology to culture and beyond.',
  },
];
---

<BaseLayout 
  title="Home"
  description="News Hub - Your AI-powered source for the latest news, technology updates, and diverse topics. Stay informed with intelligent content curation."
  keywords={['news', 'technology', 'ai', 'updates', 'articles', 'current events']}
>
  <Navbar />
  
  <main id="main-content">
    <!-- -- hero section -->
    <HeroSection />
    
    <!-- -- features section -->
    <section class="features-section section">
      <div class="container">
        <div class="section-header">
          <h2 class="section-title">Why News Hub?</h2>
          <p class="section-description">
            Experience news coverage reimagined for the modern era
          </p>
        </div>
        
        <div class="features-grid">
          {features.map((feature) => (
            <div class="feature-card">
              <div class="feature-icon">
                {feature.icon === 'sparkles' && <Sparkles size={24} strokeWidth={1.5} />}
                {feature.icon === 'zap' && <Zap size={24} strokeWidth={1.5} />}
                {feature.icon === 'shield' && <Shield size={24} strokeWidth={1.5} />}
                {feature.icon === 'globe' && <Globe size={24} strokeWidth={1.5} />}
              </div>
              <h3 class="feature-title">{feature.title}</h3>
              <p class="feature-description">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
    
    <!-- -- featured articles section -->
    <section class="featured-section section">
      <div class="container">
        <div class="section-header">
          <div class="header-content">
            <h2 class="section-title">Latest Stories</h2>
            <p class="section-description">
              Catch up on the most recent news and updates
            </p>
          </div>
          <a href="/news" class="view-all-link">
            <span>View All</span>
            <ArrowRight size={16} strokeWidth={2} />
          </a>
        </div>
        
        <div class="featured-grid">
          {featuredArticles.map((article, index) => (
            <ArticleCard
              slug={article.slug}
              title={article.title}
              excerpt={article.excerpt}
              category={article.category}
              publishedAt={article.publishedAt}
              readingTime={article.readingTime}
              imageUrl={article.imageUrl}
              featured={index === 0}
            />
          ))}
        </div>
      </div>
    </section>
    
    <!-- -- cta section -->
    <section class="cta-section section">
      <div class="container">
        <div class="cta-card">
          <div class="cta-bg" aria-hidden="true"></div>
          <div class="cta-content">
            <h2 class="cta-title">Ready to Stay Informed?</h2>
            <p class="cta-description">
              Explore our comprehensive news coverage and discover stories that matter to you.
            </p>
            <div class="cta-actions">
              <a href="/news" class="btn btn-primary">
                <span>Browse Articles</span>
                <ArrowRight size={18} strokeWidth={2} />
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>

<style>
  /* -- features section */
  .features-section {
    background-color: var(--color-bg-secondary);
  }
  
  .section-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    margin-bottom: var(--space-2xl);
    gap: var(--space-sm);
  }
  
  .section-title {
    font-size: var(--text-3xl);
    color: var(--color-text-primary);
  }
  
  .section-description {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
    max-width: 600px;
    margin: 0;
  }
  
  .features-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-lg);
  }
  
  @media (max-width: 1024px) {
    .features-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 640px) {
    .features-grid {
      grid-template-columns: 1fr;
    }
  }
  
  .feature-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: var(--space-xl);
    background-color: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    transition: all var(--transition-base);
  }
  
  .feature-card:hover {
    border-color: var(--color-border-hover);
    transform: translateY(-4px);
  }
  
  .feature-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 56px;
    height: 56px;
    margin-bottom: var(--space-md);
    background: linear-gradient(135deg, rgba(255, 107, 53, 0.15), rgba(46, 196, 182, 0.15));
    border-radius: var(--radius-lg);
    color: var(--color-accent-primary);
  }
  
  .feature-title {
    font-family: var(--font-body);
    font-size: var(--text-lg);
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: var(--space-sm);
  }
  
  .feature-description {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    line-height: 1.6;
    margin: 0;
  }
  
  /* -- featured section */
  .featured-section .section-header {
    flex-direction: row;
    justify-content: space-between;
    text-align: left;
    align-items: flex-end;
  }
  
  .header-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }
  
  .view-all-link {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    color: var(--color-accent-primary);
    font-size: var(--text-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: gap var(--transition-fast);
  }
  
  .view-all-link:hover {
    gap: var(--space-sm);
  }
  
  .featured-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-lg);
  }
  
  @media (max-width: 768px) {
    .featured-section .section-header {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-md);
    }
    
    .featured-grid {
      grid-template-columns: 1fr;
    }
  }
  
  /* -- cta section */
  .cta-section {
    padding: var(--space-2xl) 0;
  }
  
  .cta-card {
    position: relative;
    padding: var(--space-3xl);
    background-color: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    overflow: hidden;
    text-align: center;
  }
  
  .cta-bg {
    position: absolute;
    inset: 0;
    background: radial-gradient(
      ellipse at center,
      rgba(255, 107, 53, 0.1) 0%,
      transparent 70%
    );
    pointer-events: none;
  }
  
  .cta-content {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-md);
  }
  
  .cta-title {
    font-size: var(--text-3xl);
    color: var(--color-text-primary);
  }
  
  .cta-description {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    max-width: 500px;
    margin: 0;
  }
  
  .cta-actions {
    margin-top: var(--space-md);
  }
  
  .cta-actions .btn {
    padding: var(--space-md) var(--space-xl);
    font-size: var(--text-base);
  }
</style>
