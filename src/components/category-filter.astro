---
// -- category filter component - simple navigation links
import { Grid3X3, Cpu, FlaskConical, Briefcase, Palette, BookOpen } from 'lucide-astro';

interface Category {
  slug: string;
  label: string;
  icon: string;
}

interface Props {
  activeCategory?: string;
}

const { activeCategory = 'all' } = Astro.props;

const categories: Category[] = [
  { slug: 'all', label: 'All', icon: 'grid' },
  { slug: 'technology', label: 'Technology', icon: 'cpu' },
  { slug: 'topics', label: 'Topics', icon: 'book' },
  { slug: 'science', label: 'Science', icon: 'flask' },
  { slug: 'business', label: 'Business', icon: 'briefcase' },
  { slug: 'culture', label: 'Culture', icon: 'palette' },
];
---

<nav class="category-filter" aria-label="Filter by category">
  <div class="filter-container">
    {categories.map((category) => (
      <a
        href={category.slug === 'all' ? '/news' : `/news?category=${category.slug}`}
        class:list={[
          'filter-btn',
          { 'filter-btn-active': activeCategory === category.slug }
        ]}
        aria-current={activeCategory === category.slug ? 'page' : undefined}
      >
        {category.icon === 'grid' && <Grid3X3 size={16} strokeWidth={2} />}
        {category.icon === 'cpu' && <Cpu size={16} strokeWidth={2} />}
        {category.icon === 'book' && <BookOpen size={16} strokeWidth={2} />}
        {category.icon === 'flask' && <FlaskConical size={16} strokeWidth={2} />}
        {category.icon === 'briefcase' && <Briefcase size={16} strokeWidth={2} />}
        {category.icon === 'palette' && <Palette size={16} strokeWidth={2} />}
        <span>{category.label}</span>
      </a>
    ))}
  </div>
</nav>

<style>
  /* -- category filter styles - light theme */
  .category-filter {
    position: relative;
    margin-bottom: var(--space-xl);
  }
  
  .filter-container {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
    padding: var(--space-sm);
    background-color: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
  }
  
  .filter-btn {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-sm) var(--space-md);
    background-color: transparent;
    border: 1px solid transparent;
    border-radius: var(--radius-lg);
    color: var(--color-text-secondary);
    font-family: var(--font-display);
    font-size: var(--text-sm);
    font-weight: 500;
    text-decoration: none;
    transition: all var(--transition-fast);
    cursor: pointer;
  }
  
  .filter-btn:hover {
    color: var(--color-text-primary);
    background-color: var(--color-bg-tertiary);
  }
  
  .filter-btn-active {
    background: linear-gradient(135deg, #dd0cf0 0%, #7c3aed 100%);
    color: white;
    border-color: transparent;
  }
  
  .filter-btn-active:hover {
    color: white;
    background: linear-gradient(135deg, #c40bd6 0%, #6d28d9 100%);
  }
  
  /* -- responsive */
  @media (max-width: 640px) {
    .filter-container {
      justify-content: center;
    }
    
    .filter-btn span {
      display: none;
    }
    
    .filter-btn {
      padding: var(--space-sm);
    }
  }
</style>
