---
// -- hero section component - light theme inspired by starship
import { ArrowRight, Zap, Shield, Globe } from 'lucide-astro';
---

<section class="hero">
  <div class="hero-container">
    <!-- -- hero content -->
    <div class="hero-content">
      <!-- -- main title with gradient -->
      <h1 class="hero-title">
        <span class="title-gradient">News Hub</span>
      </h1>
      
      <!-- -- subtitle -->
      <p class="hero-subtitle">AI-POWERED NEWS PLATFORM</p>
      
      <!-- -- description -->
      <p class="hero-description">
        The modern, blazing-fast, and infinitely customizable news platform for everyone!
      </p>
      
      <!-- -- cta button -->
      <a href="/news" class="hero-cta">
        Get Started
        <ArrowRight size={18} strokeWidth={2} />
      </a>
    </div>
    
    <!-- -- feature cards -->
    <div class="features-grid">
      <div class="feature-card">
        <div class="feature-icon">
          <Zap size={20} strokeWidth={2} />
        </div>
        <h3 class="feature-title">Real-Time Updates</h3>
        <p class="feature-description">
          Stay informed with the latest news delivered instantly as it happens.
        </p>
      </div>
      
      <div class="feature-card">
        <div class="feature-icon">
          <Shield size={20} strokeWidth={2} />
        </div>
        <h3 class="feature-title">AI-Powered</h3>
        <p class="feature-description">
          Intelligent curation and summarization to bring you the most relevant stories.
        </p>
      </div>
      
      <div class="feature-card">
        <div class="feature-icon">
          <Globe size={20} strokeWidth={2} />
        </div>
        <h3 class="feature-title">Global Coverage</h3>
        <p class="feature-description">
          News from around the world, covering every topic that matters to you.
        </p>
      </div>
    </div>
    
  </div>
</section>

<style>
  /* -- hero section styles - light theme */
  .hero {
    position: relative;
    padding: var(--space-3xl) 0;
    background-color: var(--color-bg-primary);
    overflow: hidden;
  }
  
  .hero-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 var(--space-lg);
    text-align: center;
  }
  
  /* -- hero content */
  .hero-content {
    margin-bottom: var(--space-3xl);
  }
  
  /* -- gradient title - starship style */
  .hero-title {
    font-size: clamp(3rem, 10vw, 6rem);
    font-weight: 800;
    line-height: 1;
    margin-bottom: var(--space-md);
    animation: fade-in 0.6s ease forwards;
  }
  
  .title-gradient {
    background: linear-gradient(135deg, #dd0cf0 0%, #7c3aed 40%, #22d3ee 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .hero-subtitle {
    font-family: var(--font-display);
    font-size: var(--text-sm);
    font-weight: 600;
    letter-spacing: 0.2em;
    color: var(--color-accent-primary);
    margin-bottom: var(--space-lg);
    animation: fade-in 0.6s ease 0.1s forwards;
    opacity: 0;
  }
  
  .hero-description {
    font-size: var(--text-xl);
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto var(--space-xl);
    animation: fade-in 0.6s ease 0.2s forwards;
    opacity: 0;
  }
  
  /* -- cta button - starship style */
  .hero-cta {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-md) var(--space-xl);
    background: linear-gradient(135deg, #dd0cf0 0%, #7c3aed 100%);
    color: white;
    font-family: var(--font-display);
    font-size: var(--text-base);
    font-weight: 600;
    border-radius: var(--radius-lg);
    text-decoration: none;
    transition: all var(--transition-base);
    animation: fade-in 0.6s ease 0.3s forwards;
    opacity: 0;
  }
  
  .hero-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px -10px rgba(221, 12, 240, 0.5);
    color: white;
  }
  
  /* -- feature cards */
  .features-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-lg);
    margin-bottom: var(--space-3xl);
  }
  
  @media (max-width: 768px) {
    .features-grid {
      grid-template-columns: 1fr;
    }
  }
  
  .feature-card {
    padding: var(--space-xl);
    background-color: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    text-align: left;
    transition: all var(--transition-base);
    animation: fade-in 0.6s ease forwards;
  }
  
  .feature-card:nth-child(1) { animation-delay: 0.4s; opacity: 0; }
  .feature-card:nth-child(2) { animation-delay: 0.5s; opacity: 0; }
  .feature-card:nth-child(3) { animation-delay: 0.6s; opacity: 0; }
  
  .feature-card:hover {
    border-color: var(--color-border-hover);
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }
  
  .feature-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, rgba(221, 12, 240, 0.1), rgba(34, 211, 238, 0.1));
    border-radius: var(--radius-md);
    color: var(--color-accent-primary);
    margin-bottom: var(--space-md);
  }
  
  .feature-title {
    font-family: var(--font-display);
    font-size: var(--text-lg);
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: var(--space-sm);
  }
  
  .feature-description {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    margin: 0;
    line-height: 1.6;
  }
  
  /* -- terminal preview - starship style */
  .terminal-preview {
    max-width: 600px;
    margin: 0 auto;
    background-color: var(--color-bg-dark);
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow: var(--shadow-xl);
    animation: fade-in 0.6s ease 0.7s forwards;
    opacity: 0;
  }
  
  .terminal-header {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-sm) var(--space-md);
    background-color: rgba(255, 255, 255, 0.05);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .terminal-dots {
    display: flex;
    gap: 6px;
  }
  
  .dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }
  
  .dot.red { background-color: #ff5f56; }
  .dot.yellow { background-color: #ffbd2e; }
  .dot.green { background-color: #27c93f; }
  
  .terminal-title {
    flex: 1;
    text-align: center;
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: rgba(255, 255, 255, 0.5);
  }
  
  .terminal-body {
    padding: var(--space-lg);
    font-family: var(--font-mono);
    font-size: var(--text-sm);
  }
  
  .terminal-line {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    margin-bottom: var(--space-xs);
  }
  
  .prompt {
    color: #dd0cf0;
    font-weight: 600;
  }
  
  .branch {
    color: rgba(255, 255, 255, 0.5);
  }
  
  .git-branch {
    color: #7c3aed;
    font-weight: 600;
  }
  
  .arrow {
    color: #22d3ee;
    font-weight: 600;
  }
  
  .command {
    color: #22d3ee;
  }
  
  .args {
    color: rgba(255, 255, 255, 0.7);
  }
</style>
