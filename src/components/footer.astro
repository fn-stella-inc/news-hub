---
// -- footer component - light theme with logo
import { Github, Twitter, Linkedin, Mail, Heart, Rss } from 'lucide-astro';

const currentYear = new Date().getFullYear();

const footerLinks = {
  categories: [
    { label: 'Technology', href: '/news?category=technology' },
    { label: 'Topics', href: '/news?category=topics' },
    { label: 'Science', href: '/news?category=science' },
    { label: 'Business', href: '/news?category=business' },
    { label: 'Culture', href: '/news?category=culture' },
  ],
  resources: [
    { label: 'Generate Article', href: '/generate' },
    { label: 'RSS Feed', href: '/rss.xml' },
    { label: 'API Reference', href: '/api/articles' },
    { label: 'Documentation', href: '#' },
  ],
  company: [
    { label: 'About Us', href: '#' },
    { label: 'Contact', href: '#' },
    { label: 'Privacy Policy', href: '#' },
    { label: 'Terms of Service', href: '#' },
  ],
};

const socialLinks = [
  { icon: 'github', href: 'https://github.com', label: 'GitHub' },
  { icon: 'twitter', href: 'https://twitter.com', label: 'Twitter' },
  { icon: 'linkedin', href: 'https://linkedin.com', label: 'LinkedIn' },
  { icon: 'mail', href: 'mailto:hello@newshub.com', label: 'Email' },
];
---

<footer class="footer">
  <div class="footer-container">
    <!-- -- main footer content -->
    <div class="footer-grid">
      <!-- -- brand section with logo -->
      <div class="footer-brand">
        <a href="/" class="brand-link">
          <div class="brand-icon">
            <img src="/logo.webp" alt="News Hub Logo" class="brand-logo" />
          </div>
          <span class="brand-text">News Hub</span>
        </a>
        <p class="brand-description">
          Your source for the latest news, technology updates, and diverse topics powered by AI.
        </p>
        
        <!-- -- social links -->
        <div class="social-links">
          {socialLinks.map((social) => (
            <a 
              href={social.href} 
              class="social-link" 
              aria-label={social.label}
              target="_blank"
              rel="noopener noreferrer"
            >
              {social.icon === 'github' && <Github size={18} strokeWidth={2} />}
              {social.icon === 'twitter' && <Twitter size={18} strokeWidth={2} />}
              {social.icon === 'linkedin' && <Linkedin size={18} strokeWidth={2} />}
              {social.icon === 'mail' && <Mail size={18} strokeWidth={2} />}
            </a>
          ))}
        </div>
      </div>
      
      <!-- -- links sections -->
      <div class="footer-links-group">
        <div class="footer-links">
          <h4 class="links-title">Categories</h4>
          <ul class="links-list">
            {footerLinks.categories.map((link) => (
              <li>
                <a href={link.href} class="footer-link">{link.label}</a>
              </li>
            ))}
          </ul>
        </div>
        
        <div class="footer-links">
          <h4 class="links-title">Resources</h4>
          <ul class="links-list">
            {footerLinks.resources.map((link) => (
              <li>
                <a href={link.href} class="footer-link">{link.label}</a>
              </li>
            ))}
          </ul>
        </div>
        
        <div class="footer-links">
          <h4 class="links-title">Company</h4>
          <ul class="links-list">
            {footerLinks.company.map((link) => (
              <li>
                <a href={link.href} class="footer-link">{link.label}</a>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
    
    <!-- -- footer bottom -->
    <div class="footer-bottom">
      <p class="copyright">
        Â© {currentYear} News Hub. Made with 
        <Heart size={14} strokeWidth={2} class="heart-icon" />
        by AI
      </p>
      <a href="/rss.xml" class="rss-link">
        <Rss size={16} strokeWidth={2} />
        <span>RSS Feed</span>
      </a>
    </div>
  </div>
</footer>

<style>
  /* -- footer styles - light theme */
  .footer {
    background-color: var(--color-bg-secondary);
    border-top: 1px solid var(--color-border);
    padding: var(--space-3xl) 0 var(--space-xl);
  }
  
  .footer-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 var(--space-lg);
  }
  
  .footer-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-2xl);
    margin-bottom: var(--space-2xl);
  }
  
  @media (min-width: 768px) {
    .footer-grid {
      grid-template-columns: 1.5fr 2fr;
    }
  }
  
  /* -- brand section */
  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }
  
  .brand-link {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    text-decoration: none;
    width: fit-content;
  }
  
  .brand-icon {
    width: 40px;
    height: 40px;
    border-radius: var(--radius-md);
    overflow: hidden;
  }
  
  .brand-logo {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
  
  .brand-text {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    font-weight: 700;
    color: var(--color-text-primary);
  }
  
  .brand-description {
    color: var(--color-text-secondary);
    font-size: var(--text-sm);
    line-height: 1.6;
    max-width: 280px;
    margin: 0;
  }
  
  /* -- social links */
  .social-links {
    display: flex;
    gap: var(--space-sm);
    margin-top: var(--space-sm);
  }
  
  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    background-color: var(--color-bg-primary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    color: var(--color-text-secondary);
    transition: all var(--transition-fast);
  }
  
  .social-link:hover {
    border-color: var(--color-accent-primary);
    color: var(--color-accent-primary);
    background-color: rgba(221, 12, 240, 0.05);
  }
  
  /* -- links group */
  .footer-links-group {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-xl);
  }
  
  @media (max-width: 640px) {
    .footer-links-group {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .footer-links:last-child {
      grid-column: span 2;
    }
  }
  
  .footer-links {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }
  
  .links-title {
    font-family: var(--font-display);
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-text-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .links-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }
  
  .footer-link {
    color: var(--color-text-secondary);
    font-size: var(--text-sm);
    transition: color var(--transition-fast);
  }
  
  .footer-link:hover {
    color: var(--color-accent-primary);
  }
  
  /* -- footer bottom */
  .footer-bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: var(--space-md);
    padding-top: var(--space-xl);
    border-top: 1px solid var(--color-border);
  }
  
  .copyright {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    color: var(--color-text-muted);
    font-size: var(--text-sm);
    margin: 0;
  }
  
  .heart-icon {
    color: var(--color-accent-primary);
    fill: var(--color-accent-primary);
  }
  
  .rss-link {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    color: var(--color-text-muted);
    font-size: var(--text-sm);
    transition: color var(--transition-fast);
  }
  
  .rss-link:hover {
    color: var(--color-accent-primary);
  }
</style>
