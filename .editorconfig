# -- editor configuration for news-hub project
# -- https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.{yml,yaml}]
indent_size = 2

[*.json]
indent_size = 2

[Dockerfile]
indent_size = 4

[Makefile]
indent_style = tab

[*.{sh,bash}]
indent_size = 2
shell_variant = bash
switch_case_indent = true
